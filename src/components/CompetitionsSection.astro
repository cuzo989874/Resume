---
interface Props {
  title: string;
  competitions: string[];
}

const { title, competitions } = Astro.props;
---

<section class="section competitions-section">
  <h3 class="section-title">{title}</h3>
  <div class="timeline">
    <div class="timeline-item">
      <div class="timeline-marker"></div>
      <div class="timeline-content">
        <ul>
          {competitions.map((competition) => (
            <li>{competition}</li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>
