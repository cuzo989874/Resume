---
interface Props {
  title: string;
  experience: any;
}

const { title, experience } = Astro.props;
---

<section id="experience" class="section experience-section">
  <h3 class="section-title">{title}</h3>
  <div class="timeline">
    <!-- Job 1 -->
    <div class="timeline-item">
      <div class="timeline-marker"></div>
      <div class="timeline-content">
        <div class="timeline-header">
          <h4>{experience.job1.role}</h4>
          <span class="date">{experience.job1.date}</span>
        </div>
        <div class="job-tags">
          <span class="job-tag">React</span>
          <span class="job-tag">React Router</span>
        </div>
        <p>{experience.job1.desc}</p>
        <p>{experience.job1.desc2}</p>
        <p>{experience.job1.desc3}</p>
        <p>{experience.job1.desc4}</p>
      </div>
    </div>

    <!-- Job 2 -->
    <div class="timeline-item">
      <div class="timeline-marker"></div>
      <div class="timeline-content">
        <div class="timeline-header">
          <h4>{experience.job2.role}</h4>
          <span class="date">{experience.job2.date}</span>
        </div>
        <div class="job-tags">
          <span class="job-tag">Angular</span>
          <span class="job-tag">Angular 19</span>
        </div>
        <p>{experience.job2.desc}</p>
        <p>{experience.job2.desc2}</p>
        <p>{experience.job2.desc3}</p>
      </div>
    </div>

    <!-- Job 3 -->
    <div class="timeline-item">
      <div class="timeline-marker"></div>
      <div class="timeline-content">
        <div class="timeline-header">
          <h4>{experience.job3.role}</h4>
          <span class="date">{experience.job3.date}</span>
        </div>
        <div class="job-tags">
          <span class="job-tag">Vue.js</span>
          <span class="job-tag">Quasar</span>
        </div>
        <p>{experience.job3.desc}</p>
        <p>{experience.job3.desc2}</p>
      </div>
    </div>

    <!-- Job 4 -->
    <div class="timeline-item">
      <div class="timeline-marker"></div>
      <div class="timeline-content">
        <div class="timeline-header">
          <h4>{experience.job4.role}</h4>
          <span class="date">{experience.job4.date}</span>
        </div>
        <div class="job-tags">
          <span class="job-tag">Vue.js</span>
          <span class="job-tag">Vue 3</span>
          <span class="job-tag">Element-UI</span>
          <span class="job-tag">Turf.js</span>
          <span class="job-tag">ERP</span>
        </div>
        <p>{experience.job4.desc}</p>
        <p>{experience.job4.desc2}</p>
        <p>{experience.job4.desc3}</p>
        <ul>
          <li>
            <strong>{experience.job4.project1.title}</strong><br>
            {experience.job4.project1.content}<br>
            <strong>{experience.job4.project1.labels.highlight}</strong>{experience.job4.project1.highlight}<br>
            <strong>{experience.job4.project1.labels.role}</strong>{experience.job4.project1.role}<br>
            <strong>{experience.job4.project1.labels.duration}</strong>{experience.job4.project1.duration}
          </li>
          <li>
            <strong>{experience.job4.project2.title}</strong><br>
            {experience.job4.project2.content}
          </li>
          <li>
            <strong>{experience.job4.project3.title}</strong><br>
            {experience.job4.project3.content}<br>
            <strong>{experience.job4.project3.labels.highlight}</strong> {experience.job4.project3.highlight}<br>
            <strong>{experience.job4.project3.labels.role}</strong> {experience.job4.project3.role}<br>
            <strong>{experience.job4.project3.labels.duration}</strong> {experience.job4.project3.duration}<br>
            {experience.job4.project3.feature}<br>
            {experience.job4.project3.labels.demo} <a href={experience.job4.project3.demo} target="_blank"
              rel="noopener noreferrer">{experience.job4.project3.demo}</a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Job 5 -->
    <div class="timeline-item">
      <div class="timeline-marker"></div>
      <div class="timeline-content">
        <div class="timeline-header">
          <h4>{experience.job5.role}</h4>
          <span class="date">{experience.job5.date}</span>
        </div>
        <div class="job-tags">
          <span class="job-tag">Vue.js</span>
          <span class="job-tag">Cordova</span>
          <span class="job-tag">PHP</span>
          <span class="job-tag">jQuery</span>
        </div>
        <p>{experience.job5.desc}</p>
        <ul>
          <li>
            <strong>{experience.job5.project1.title}</strong><br>
            {experience.job5.project1.content}<br>
            {experience.job5.project1.labels.duration}{experience.job5.project1.duration}<br>
            {experience.job5.project1.labels.role}{experience.job5.project1.role}
          </li>
          <li>
            <strong>{experience.job5.project2.title}</strong><br>
            {experience.job5.project2.content}<br>
            {experience.job5.project2.labels.duration}{experience.job5.project2.duration}<br>
            {experience.job5.project2.labels.role}{experience.job5.project2.role}
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>
